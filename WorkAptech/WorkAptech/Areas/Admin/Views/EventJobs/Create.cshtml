@model WorkAptech.Data.EventJob

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<br />
<h2 class="text-info">Create Envent</h2>
<br />

<form method="post" asp-action="Create" enctype="multipart/form-data">
    <div class="border backgroundWhite">
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="TiTle" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <input asp-for="TiTle" class="form-control" />
            </div>
            <span asp-validation-for="TiTle" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="FromDate" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <input asp-for="FromDate" class="form-control" />
            </div>
            <span asp-validation-for="FromDate" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="ToDate" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <input asp-for="ToDate" class="form-control" />
            </div>
            <span asp-validation-for="ToDate" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Hour" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <input asp-for="Hour" id="timepicker"  class="form-control" />
            </div>
            <span asp-validation-for="Hour" class="text-danger"></span>
        </div>
        

            <div class="col-5">
                <input value="1" checked="checked" hidden="hidden"/>    
            </div>


        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Image" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <input type="file" name="files" multiple class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="CategoryId" class="control-label"></label>
            </div>
            <div class="col-5">
                <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.CategoryId"></select>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="CompanyId" class="control-label"></label>
            </div>
            <div class="col-5">
                <select asp-for="CompanyId" class="form-control" asp-items="ViewBag.CompanyId"></select>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Details" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <input asp-for="Details" class="form-control" />
            </div>
            <span asp-validation-for="Details" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-5 offset-2">
                <partial name="_CreateAndBackToListButton" />
            </div>
        </div>
    </div>
</form>
@section Scripts {
    <script>
        $('#timepicker').timepicker({
            timeFormat: 'h:mm:ss',
            interval: 30,
            minTime: '6',
            maxTime: '6:00pm',
            defaultTime: '11',
            startTime: '6:00',
            dynamic: false,
            dropdown: true,
            scrollbar: true
        });
    </script>
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
