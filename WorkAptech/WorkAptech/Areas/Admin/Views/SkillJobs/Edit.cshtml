@model WorkAptech.Data.SkillJob

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<form method="post" asp-action="Edit" enctype="multipart/form-data">
    <div class="border backgroundWhite row">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="col-8">
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="JobId" class="col-form-label"></label>
                </div>
                <div class="col-8">
                    <select asp-for="JobId" id="CategoryId" asp-items="ViewBag.JobId" class="form-control"></select>
                </div>

            </div>
            <div class="col-8">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="SkillId" class="col-form-label"></label>
                    </div>
                    <div class="col-8">
                        <select asp-for="SkillId" id="CategoryId" asp-items="ViewBag.SkillId" class="form-control"></select>
                    </div>

                </div>

                <div class="col-8">
                    <div class="col-8 offset-4">
                        <partial name="_EditAndBackToListButton" model="Model.Id" />
                    </div>
                </div>
            </div>
</form>
