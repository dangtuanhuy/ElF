
@model IEnumerable<WorkAptech.Data.Company>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<br /><br />
<div class="border backgroundWhite">
    <div class="row">
        <div class="col-6">
            <h2 class="text-info"> Company List</h2>
        </div>
        <div class="col-6 text-right">
            <partial name="_CreateButtonPartial" />
        </div>
    </div>
    <br />
    <div>
        @if (Model.Count() > 0)
        {
            <table class="table table-striped border" id="tablefillset">
                <thead>
                <tr class="table-secondary">
                    <th>
                        @Html.DisplayNameFor(m => m.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(m => m.Type)
                    </th>
                    <th>
                        @Html.DisplayNameFor(m => m.Address)
                    </th>
                    <th>
                        @Html.DisplayNameFor(m => m.Contact)
                    </th>
                    <th>
                        @Html.DisplayNameFor(m => m.CountryId)
                    </th>
                    <th>
                        @Html.DisplayNameFor(m => m.QtyEmployee)
                    </th>
                    <th></th>
                   
                </tr>
                    </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(m => item.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(m => item.Type)
                            </td>
                            <td>
                                @Html.DisplayFor(m => item.Address)
                            </td>
                            <td>
                                @Html.DisplayFor(m => item.Contact)
                            </td>
                            <td>
                                @Html.DisplayFor(m => item.CountryId)
                            </td>
                            <td>
                                @Html.DisplayFor(m => item.QtyEmployee)
                            </td>

                            <td>
                                <partial name="_TableButtonPartial" model="item.Id" />
                            </td>
                        </tr>
                    }
                    </tbody>
</table>
        }
        else
        {
            <p>No category exists...</p>
        }
    </div>
</div>


