@model Generatehttps.Models.JobSkill

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<h2 class="text-info">Create JobSkill</h2>
<br />

<form method="post" asp-action="Create">
    <div class="border backgroundWhite">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="SkillId" class="control-label"></label>
            </div>
            <div class="col-5">
                <select asp-for="SkillId" class="form-control" asp-items="ViewBag.SkillId"></select>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="JobId" class="control-label"></label>
            </div>
            <div class="col-5">
                <select asp-for="JobId" class="form-control" asp-items="ViewBag.JobId"></select>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-5 offset-2">
                <partial name="_CreateAndBackToListButton" />
            </div>
        </div>
    </div>
</form>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
