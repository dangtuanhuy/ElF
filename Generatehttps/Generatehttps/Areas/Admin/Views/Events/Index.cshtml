@model IEnumerable<Generatehttps.Models.Event>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br /><br />
<div class="border backgroundWhite">
    <div class="row">
        <div class="col-6">
            <h2 class="text-info"> Event List</h2>
        </div>
        <div class="col-6 text-right">
            <partial name="_CreateButtonPartial" />
        </div>
    </div>
    <br />
    <div>
        @if (Model.Count() > 0)
        {
            <table class="table table-striped border" id="tablefillset">
                <thead>
                    <tr class="table-secondary">
                        <th>
                            @Html.DisplayNameFor(m => m.TiTle)
                        </th>
                        <th>
                            @Html.DisplayNameFor(m => m.Date)
                        </th>
                        <th>
                            @Html.DisplayNameFor(m => m.Hour)
                        </th>
                        <th>
                            @Html.DisplayNameFor(m => m.Address)
                        </th>
                        <th>
                            @Html.DisplayNameFor(m => m.Information)
                        </th>
                        <th></th>

                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                    <tr>
                        <td>
                            @Html.DisplayFor(m => item.TiTle)
                        </td>
                        <td>
                            @Html.DisplayFor(m => item.Date)
                        </td>
                        <td>
                            @Html.DisplayFor(m => item.Hour)
                        </td>
                        <td>
                            @Html.DisplayFor(m => item.Address)
                        </td>
                        <td>
                            @Html.DisplayFor(m => item.Information)
                        </td>
                        <td style="width:150px">
                            <partial name="_TableButtonPartial" model="item.Id" />
                        </td>
                    </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p>No Event exists...</p>
        }
    </div>
</div>



