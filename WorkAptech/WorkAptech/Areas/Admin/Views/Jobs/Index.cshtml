@model IEnumerable<WorkAptech.Data.Job>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<br /><br />
<div class="border backgroundWhite">
    <div class="row">
        <div class="col-6">
            <h2 class="text-info"> Job List</h2>
        </div>
        <div class="col-6 text-right">
            <partial name="_CreateButtonPartial" />
        </div>
    </div>
    <br />
    <div>
        @if (Model.Count() > 0)
        {
            <table class="table table-striped border" id="tablefillset">
                <thead>
                    <tr class="table-secondary">
                        
                        <th>
                            @Html.DisplayNameFor(m => m.Name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(m => m.Salary)
                        </th>
                        <th>
                            @Html.DisplayNameFor(m => m.JobRole)
                        </th>
                        <th>
                            @Html.DisplayNameFor(m => m.Description)
                        </th>

                        
                        <th>
                            @Html.DisplayNameFor(m => m.Experience)
                        </th>
                        <th>
                            @Html.DisplayNameFor(m => m.JobDate)
                        </th>
                        <th>
                            @Html.DisplayNameFor(m => m.WorkingTime)
                        </th>
                        <th>
                            @Html.DisplayNameFor(m => m.WorkingForm)
                        </th>
                        <th>
                            @Html.DisplayNameFor(m => m.CategoryId)
                        </th>
                        
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {

                    <tr>
                        <td>
                            @Html.DisplayFor(m => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(m => item.Salary)
                        </td>
                        <td>
                            @Html.DisplayFor(m => item.JobRole)
                        </td>
                        <td>
                            @Html.DisplayFor(m => item.Description)
                        </td>
                        
                        <td>
                            @Html.DisplayFor(m => item.Experience)
                        </td>
                        <td>
                            @Html.DisplayFor(m => item.JobDate)
                        </td>
                        <td>
                            @Html.DisplayFor(m => item.WorkingTime)
                        </td>
                        <td>
                            @Html.DisplayFor(m => item.WorkingForm)
                        </td>
                        <td>
                            @Html.DisplayFor(m => item.CategoryId)
                        </td>
                        
                        <td style="width:150px">
                            <partial name="_TableButtonPartial" model="item.Id" />
                        </td>
                    </tr>
                   
                    }
                </tbody>
            </table>
        }
        else
        {
            <p>No Category exists...</p>
        }
    </div>
</div>
