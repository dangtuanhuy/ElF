@model WorkAptech.Data.EventJob

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<br />
<h2 class="text-info">Edit Event</h2>
<br />
<form method="post" asp-action="Edit" enctype="multipart/form-data">
    <div class="border backgroundWhite row">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="col-8">
            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="TiTle" class="control-label"></label>
                </div>
                <div class="col-5">
                    <input asp-for="TiTle" class="form-control" />
                </div>
                <span asp-validation-for="TiTle" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="Details" class="control-label"></label>
                </div>
                <div class="col-5">
                    <input asp-for="Details" class="form-control" />
                </div>
                <span asp-validation-for="Details" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="FromDate" class="col-form-label"></label>
                </div>
                <div class="col-5">
                    <input asp-for="FromDate" class="form-control" />
                </div>
                <span asp-validation-for="FromDate" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="ToDate" class="col-form-label"></label>
                </div>
                <div class="col-5">
                    <input asp-for="ToDate" class="form-control" />
                </div>
                <span asp-validation-for="ToDate" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="Hour" class="col-form-label"></label>
                </div>
                <div class="col-5">
                    <input asp-for="Hour" class="form-control" />
                </div>
                <span asp-validation-for="Hour" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="EventStatus" class="col-form-label"></label>
                </div>
                <div class="col-5">
                    <input asp-for="EventStatus" /> @Html.DisplayNameFor(model => model.EventStatus)
                </div>
            </div>
            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="Image" class="col-form-label"></label>
                </div>
                <div class="col-5">
                    <input type="file" name="files" multiple class="form-control" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="CategoryId" class="control-label"></label>
                </div>
                <div class="col-5">
                    <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.CategoryId"></select>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="CompanyId" class="control-label"></label>
                </div>
                <div class="col-5">
                    <select asp-for="CompanyId" class="form-control" asp-items="ViewBag.CompanyId"></select>
                </div>
            </div>
        </div>
        <div class="col-3 offset-1">
            <img src="@Model.Image" width="100%" style="border-radius:5px;border: 1px solid #bbb9b9;" />
        </div>
        <div class="col-8">
            <div class="col-8 offset-4">
                <partial name="_EditAndBackToListButton" model="Model.Id" />
            </div>
        </div>
    </div>
</form>

