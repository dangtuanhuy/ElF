@model IEnumerable<WorkAptech.Data.Training>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<br /><br />
<div class="border backgroundWhite">
    <div class="row">
        <div class="col-6">
            <h2 class="text-info"> Training List</h2>
        </div>
        <div class="col-6 text-right">
            <partial name="_CreateButtonPartial" />
        </div>
    </div>
    <br />
    <div>
        @if (Model.Count() > 0)
        {
            <table class="table table-striped border" id="tablefillset">
                <thead>
                    <tr class="table-secondary">
                        <th>
                            @Html.DisplayNameFor(m => m.Title)
                        </th>
                        <th>
                            @Html.DisplayNameFor(m => m.CompanyId)
                        </th>
                        <th>
                            @Html.DisplayNameFor(m => m.Type)
                        </th>
                        <th>
                            @Html.DisplayNameFor(m => m.TrainingDate)
                        </th>
                        <th>
                            @Html.DisplayNameFor(m => m.Hours)
                        </th>
                        <th>
                            @Html.DisplayNameFor(m => m.Description)
                        </th>
                        <th>
                            @Html.DisplayNameFor(m => m.CategoryId)
                        </th>

                        <th>
                            @Html.DisplayNameFor(m => m.Status)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {

                    <tr>
                        <td>
                            @Html.DisplayFor(m => item.Title)
                        </td>
                        <td>
                            @Html.DisplayFor(m => item.CompanyId)
                        </td>
                        <td>
                        @if (item.Type == false)

                        {
                            <a class="btn btn-danger text-white" asp-action="Lock" asp-route-id="@item.Id">
                                Offline
                            </a>
                        }
                        else
                        {
                            <a class="btn btn-success text-white" asp-action="UnLock" asp-route-id="@item.Id">
                                Online
                            </a>
                        }
                        </td>
                        <td>
                            @Html.DisplayFor(m => item.TrainingDate)
                        </td>
                        <td>
                            @Html.DisplayFor(m => item.Hours)
                        </td>
                        <td>
                            @Html.DisplayFor(m => item.Description)
                        </td>
                        <td>
                            @Html.DisplayFor(m => item.CategoryId)
                        </td>

                        <td>
                            @if (item.Status == false)

                            {
                                <a class="btn btn-danger text-white" asp-action="Lock" asp-route-id="@item.Id">
                                    Offline
                                </a>
                            }
                            else
                            {
                                <a class="btn btn-success text-white" asp-action="UnLock" asp-route-id="@item.Id">
                                    Online
                                </a>
                            }
                        </td>
                        <td style="width:150px">
                            <partial name="_TableButtonPartial" model="item.Id" />
                        </td>
                    </tr>

                    }
                </tbody>
            </table>
        }
        else
        {
            <p>No Category exists...</p>
        }
    </div>
</div>



