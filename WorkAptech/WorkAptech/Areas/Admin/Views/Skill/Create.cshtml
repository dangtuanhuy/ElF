@model WorkAptech.Models.ViewModels.SKillViewModels
@using WorkAptech.Extensions
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<br />
<h2 class="text-info">Create Skill</h2>
<br />

<form method="post" asp-action="Create">
    <div class="border backgroundWhite">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Skill.Name" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <input asp-for="Skill.Name" class="form-control" />
            </div>
            <span asp-validation-for="Skill.Name" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Skill.CategoryId" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <select asp-for="@Model.Skill.CategoryId" id="CategoryId" asp-items="Model.Category.ToSelectListItem(Model.Skill.CategoryId)" class="form-control"></select>
            </div>

        </div>
        <div class="form-group row">
            <div class="col-5 offset-2">
                <partial name="_CreateAndBackToListButton" />
            </div>
        </div>
    </div>
</form>


