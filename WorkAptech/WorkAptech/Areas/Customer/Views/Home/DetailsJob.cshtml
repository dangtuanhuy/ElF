
@{
    ViewData["Title"] = "DetailsJob";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}
@model WorkAptech.Data.Job
<section class="banner-area relative fit-for-single" id="home">
    <div class="overlay overlay-bg"></div>
    <div class="container">
        <div class="row fullscreen d-flex align-items-center justify-content-center">
            <div class="banner-content col-lg-12">

            </div>
        </div>
    </div>
</section>

<section class="post-area section-gap">
    <div class="container">
        <div class="row justify-content-center d-flex">
            <div class="col-lg-9 post-list">
                <!--  -->
                <div class="post-list">
                    <div class="single-post">
                        <div class="d-flex">
                            <div class="thumb" style="width: 40%; padding-left: 2%">
                                <img src="@Model.Image" alt="" style=" width: 100%; height: 100%;
													margin: auto; border: 1px solid #fa4949;" />
                            </div>
                            <div class="details" style="width: 60%; padding-left: 5%">
                                <div class="title d-flex flex-row justify-content-between">
                                    <div class="titles">
                                        <a href="#">
                                            <h3>@Model.Name</h3>
                                        </a>
                                        <h6>@Model.ApplicationUser.Company.Name</h6>
                                    </div>
                                </div>
                                <div class="title d-flex flex-row justify-content-between">
                                    <ul class="tags-skill">
                                        @foreach (var item in ViewBag.query)
                                        {
                                            <li>
                                                <a href="#">@item</a>
                                            </li>
                                        }

                                    </ul>
                                </div>
                                <!-- <p class="descrip">
                                                Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod temporinc ididunt ut dolore magna aliqua.
                                            </p> -->
                                <!-- <h5>Job Nature: Full time</h5> -->
                                <p class="address" style="color:#68ba50">
                                    <i class="fas fa-dollar-sign"
                                       style="margin: 0 13px 0 3px"></i>@Model.Salary
                                </p>
                                <p class="address">
                                    <span class="lnr lnr-map-marker"></span>@Model.ApplicationUser.Company.Address
                                </p>
                                <p class="address"><span class="lnr lnr-calendar-full"></span>03/02/2019</p>
                                <div style="text-align: center;">
                                    <ul class="btns">
                                        <li><a href="#">Apply now</a></li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
                <!--  -->
                <div class="single-post detail-job">
                    <div class="job_reason_to_join_us">
                        <h2 class="title">Top 3 Reasons To Join Us</h2>
                        <div class="top-3-reasons">
                            <ul>
                                <li>Được làm việc trong môi trường thách thức</li>
                                <li>Được hưởng mức lương hấp dẫn theo năng lực</li>
                                <li>Có nhiều khả năng phát triển, thăng tiến</li>
                            </ul>
                        </div>

                    </div>
                    <div class="job_description">
                        <div class="title-apply-line">
                            <h2 class="title">The Job</h2>
                            <div class="clearfix"></div>
                        </div>
                        <div class="description">
                            <p>
                                - Tham gia nghiên cứu, phát triển các giải pháp an ninh mạng :<br>&nbsp; + Giám sát
                                và phát hiện tấn công.<br>&nbsp; + Quản lý ATTT cho tổ chức/ doanh nghiệp.<br>- Phân
                                tích yêu cầu, thiết kế hệ thống.<br>- Tối ưu hiệu năng hệ thống.
                            </p>
                        </div>
                    </div>
                    <div class="skills_experience">
                        <h2 class="title">Your Skills and Experience</h2>
                        <div class="experience">
                            <p>
                                1. Lập trình tốt, đặc biệt ngôn ngữ Java/ C++/ Python.<br>2. Tư duy tốt, nắm bắt công
                                nghệ nhanh.<br>3. Ưu tiên ứng viên (không yêu cầu tất cả):<br>- Có kiến thức Design
                                pattern và thiết kế hệ thống.<br>- Có kinh nghiệm tối ưu hệ thống / tham gia dự án
                                lớn, số lượng ng dùng đáng kể.<br>- Có kinh nghiệm làm việc với hệ thống thu thập và
                                phân tích log tập trung.<br>- Biết sử dụng công nghệ NoSQL, Redis, Kafka.<br>- Biết
                                sử dụng các công cụ DevOps
                            </p>
                        </div>
                    </div>
                    <div class="love_working_here">
                        <h2 class="title">Why You'll Love Working Here</h2>
                        <div class="culture_description">
                            <p></p>
                            <ul>
                                <li>Mức thu nhập từ 1.000$- 2.000$/ tháng</li>
                                <li>
                                    Được làm việc với các chuyên gia đầu ngành trong lĩnh vực an toàn thông tin,
                                </li>
                                <li>Được va chạm xử lý các vụ việc mất an toàn thông tin tối quan trọng.</li>
                                <li>
                                    Có cơ hội tham gia các hội thảo ATTT trong nước và thế giới (Singapore, Mỹ, Tây
                                    Ban Nha,…)
                                </li>
                                <li>
                                    Môi trường làm việc trẻ trung, hiện đại, nhiều cơ hội phát triển nghề nghiệp.
                                </li>
                            </ul>
                            <p></p>
                        </div>
                    </div>
                </div>
                <div class="single-post job-details">
                    <h4 class="single-title">We are here :</h4>
                    <div id="location-employer">
                        <iframe allowfullscreen="true" frameborder="0" height="100%"
                                src="https://www.google.com/maps/embed/v1/place?key=AIzaSyAMccvlWFDk8E9b5Bk6YdPh1ZUht-JPcqU&amp;q=Trần Văn Khéo"
                                style="border:0" width="100%"></iframe>
                    </div>
                </div>
            </div>
            <!--  -->
            <!--  -->
            <div class="col-lg-3 sidebar">
                    <div class="single-slidebar employer">
                        <img src="@Model.Image" alt="" style="display: block;
							width: 100%;
							height: 180px;
							margin: 0 auto;
							border-radius: 10px" />
                        <h4 style="margin:0 auto;"><span class="title-employer">@Model.ApplicationUser.Company.Name</span></h4>
                        <p class="descrip" style="text-align: justify;">
                            @Model.Description
                        </p>
                        <div class="detail-employer">
                            <table>
                                <tr>
                                    <td><i class="fas fa-cog"></i></td>
                                    <td>@Model.Name</td>
                                </tr>
                                <tr>
                                    <td><i class="fas fa-users"></i></td>
                                    <td>@Model.Salary</td>
                                </tr>
                                <tr>
                                    <td style="line-height: 0.7"><i class="flag flag-@Model.ApplicationUser.Company.Country.Code.ToString().ToLower()"></i></td>
                                    <td>@Model.ApplicationUser.Company.Location.Name</td>
                                </tr>
                                <tr>
                                    <td><i class="fas fa-calendar-alt"></i></td>
                                    <td>@Model.JobDate</td>
                                </tr>
                                <tr style="vertical-align: top; padding-top: 4px">
                                    <td><i class="fas fa-map-marker-alt"></i></td>
                                    <td style="line-height: 1.3">@Model.ApplicationUser.Company.Address</td>
                                </tr>
                            </table>
                        </div>
                        <a  class="link-employer" asp-area="customer" asp-controller="home" asp-action="DetailsJob" asp-route-id="@Model.Id">More about us...</a>
                    </div>
                }

                <div class="single-slidebar">
                    <h4>Jobs for you :</h4>
                    <div class="active-relatedjob-carusel">
                        @foreach (var lst in ViewBag.queryjob)
                        {
                            <div class="single-rated">
                                <img class="img-fluid" src="@lst.Image" alt="">
                                <a href="single.html">
                                    <h4>@lst.Name</h4>
                                </a>
                                <table>
                                    <tr>
                                        <td>
                                            <p class="address" style="color:#68ba50">
                                                <i class="fas fa-dollar-sign"
                                                   style="margin: 0 13px 0 3px"></i>
                                            </p>
                                        </td>
                                        <td>@lst.ApplicationUser.Company.Name</td>
                                    </tr>
                                    <tr>
                                        <td>
                                            <p class="address"><span class="lnr lnr-map-marker"></span></p>
                                        </td>
                                        <td>
                                            @lst.ApplicationUser.Company.Address
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            <p class="address"><span class="lnr lnr-calendar-full"></span></p>
                                        </td>
                                        <td>@lst.JobDate</td>
                                    </tr>
                                </table>
                                <a href="#" class="btns text-uppercase">Apply job</a>
                            </div>
                        }
                    </div>
                </div>

            </div>
        </div>
    </div>
</section>
